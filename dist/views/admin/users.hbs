<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">
    <i class="bi bi-people"></i>
    User Management
  </h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshUsers()">
        <i class="bi bi-arrow-clockwise"></i>
        Refresh
      </button>
    </div>
  </div>
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
  <div class="card-header">
    <i class="bi bi-funnel"></i>
    Search & Filter Users
  </div>
  <div class="card-body">
    <form id="userSearchForm">
      <div class="row g-3 align-items-end">
        <div class="col-md-4">
          <label for="search" class="form-label">Search</label>
          <input type="text" class="form-control" id="search" placeholder="Name, email, phone, visitor ID..."
                 value="{{searchQuery}}">
        </div>
        <div class="col-md-2">
          <label for="sortBy" class="form-label">Sort By</label>
          <select class="form-select" id="sortBy">
            <option value="created_at" {{#if (eq sortBy 'created_at')}}selected{{/if}}>Registration Date</option>
            <option value="name" {{#if (eq sortBy 'name')}}selected{{/if}}>Name</option>
            <option value="email" {{#if (eq sortBy 'email')}}selected{{/if}}>Email</option>
            <option value="coins_balance" {{#if (eq sortBy 'coins_balance')}}selected{{/if}}>Coins Balance</option>
            <option value="rp_balance" {{#if (eq sortBy 'rp_balance')}}selected{{/if}}>RP Balance</option>
            <option value="casino_registrations" {{#if (eq sortBy 'casino_registrations')}}selected{{/if}}>Casino Registrations</option>
            <option value="casino_deposits" {{#if (eq sortBy 'casino_deposits')}}selected{{/if}}>Casino Deposits</option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="emailVerified" class="form-label">Email</label>
          <select class="form-select" id="emailVerified">
            <option value="">All</option>
            <option value="true" {{#if (eq emailVerifiedFilter 'true')}}selected{{/if}}>Verified</option>
            <option value="false" {{#if (eq emailVerifiedFilter 'false')}}selected{{/if}}>Not Verified</option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="phoneVerified" class="form-label">Phone</label>
          <select class="form-select" id="phoneVerified">
            <option value="">All</option>
            <option value="true" {{#if (eq phoneVerifiedFilter 'true')}}selected{{/if}}>Verified</option>
            <option value="false" {{#if (eq phoneVerifiedFilter 'false')}}selected{{/if}}>Not Verified</option>
          </select>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-square"></i>
            Apply
          </button>
          <button type="button" class="btn btn-secondary ms-2" onclick="clearSearch()">
            <i class="bi bi-x-circle"></i>
            Clear
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Users Table -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span>
      <i class="bi bi-table"></i>
      Users List ({{pagination.total}} total)
    </span>
    <small class="text-muted">
      Showing {{pagination.from}}-{{pagination.to}} of {{pagination.total}}
    </small>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th>User</th>
            <th>Contact</th>
            <th>Balance</th>
            <th>Casino Actions</th>
            <th>Verified</th>
            <th>Registered</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <div class="avatar-sm me-3">
                  <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                       style="width: 40px; height: 40px;">
                    {{firstChar this.name}}
                  </div>
                </div>
                <div>
                  <div class="fw-bold">{{this.name}}</div>
                  <small class="text-muted">ID: {{this.visitor_id}}</small>
                </div>
              </div>
            </td>
            <td>
              <div>{{this.email}}</div>
              {{#if this.phone}}
              <small class="text-muted">{{this.phone}}</small>
              {{/if}}
            </td>
            <td>
              <div>
                <span class="badge bg-success">{{this.coins_balance}} coins</span>
              </div>
              <div class="mt-1">
                <span class="badge bg-info">{{this.rp_balance}} RP</span>
              </div>
            </td>
            <td>
              <div>
                <span class="badge bg-primary" title="Unique Casino Registrations">{{this.casino_registrations}} REG</span>
              </div>
              <div class="mt-1">
                <span class="badge bg-warning text-dark" title="Unique Casino Deposits">{{this.casino_deposits}} DEP</span>
              </div>
            </td>
            <td>
              <div>
                <span class="badge verification-badge {{#if this.email_verified}}bg-success{{else}}bg-secondary{{/if}}" title="{{#if this.email_verified}}Email Verified{{else}}Email Not Verified{{/if}}">
                  <i class="bi bi-envelope-fill"></i>
                  Email
                </span>
              </div>
              <div class="mt-1">
                <span class="badge verification-badge {{#if this.phone_verified}}bg-success{{else}}bg-secondary{{/if}}" title="{{#if this.phone_verified}}Phone Verified{{else}}Phone Not Verified{{/if}}">
                  <i class="bi bi-phone-fill"></i>
                  Phone
                </span>
              </div>
            </td>
            <td>
              <div>{{formatDateOnly this.created_at}}</div>
              <small class="text-muted">{{formatTimeOnly this.created_at}}</small>
            </td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <button type="button" class="btn btn-outline-primary"
                        onclick="viewUser('{{this.id}}')" title="View Details">
                  <i class="bi bi-eye"></i>
                </button>
                <button type="button" class="btn btn-outline-success"
                        onclick="adjustBalance('{{this.id}}')" title="Adjust Balance">
                  <i class="bi bi-wallet2"></i>
                </button>
                <button type="button" class="btn btn-outline-danger"
                        onclick="deleteUser('{{this.id}}')" title="Delete User">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </td>
          </tr>
          {{/each}}
          {{#unless users.length}}
          <tr>
            <td colspan="6" class="text-center text-muted">No users found matching your filters</td>
          </tr>
          {{/unless}}
        </tbody>
      </table>
    </div>
    
    {{#if pagination.hasPages}}
    <div class="card-footer">
      <nav>
        <ul class="pagination pagination-sm justify-content-center mb-0">
          <li class="page-item {{#unless pagination.hasPrev}}disabled{{/unless}}">
            <a class="page-link" href="?page={{pagination.prevPage}}&{{queryString}}">Previous</a>
          </li>
          
          {{#each pagination.pages}}
          <li class="page-item {{#if this.active}}active{{/if}}">
            <a class="page-link" href="?page={{this.number}}&{{../queryString}}">{{this.number}}</a>
          </li>
          {{/each}}
          
          <li class="page-item {{#unless pagination.hasNext}}disabled{{/unless}}">
            <a class="page-link" href="?page={{pagination.nextPage}}&{{queryString}}">Next</a>
          </li>
        </ul>
      </nav>
    </div>
    {{/if}}
  </div>
</div>

