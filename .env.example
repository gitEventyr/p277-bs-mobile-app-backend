# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=casino_dev


# Security Configuration
SESSION_SECRET=your-session-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=30d
USE_HTTPS=false

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@casino.com

# SMTP Configuration (for development/testing)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid Configuration (for production)
SENDGRID_API_KEY=
# SendGrid Dynamic Template IDs (set these to your actual template IDs from SendGrid dashboard)
SENDGRID_WELCOME_TEMPLATE_ID=
SENDGRID_EMAIL_VERIFICATION_TEMPLATE_ID=
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=

# AWS SES Configuration (alternative for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Application URLs
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEME=casino://
MOBILE_RESET_PATH=reset-password

# External Services
EMAIL_SERVICE_API_KEY=your-email-api-key
GEOLOCATION_API_KEY=your-geo-api-key

# Development Settings (for Docker)
# Uncomment these when using docker-compose
# DB_HOST=postgres

# AWS Production Settings
# Uncomment and configure these for AWS deployment
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_SSL=true

# AWS Configuration (for services like SES, S3, etc.)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SendGrid Configuration (recommended for production email)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key