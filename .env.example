# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=casino_dev
DB_SSL=false

# Security Configuration
SESSION_SECRET=your-session-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=30d
USE_HTTPS=false

# Email Configuration
# Options: smtp, sendgrid, aws, onesignal (default: smtp)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@casino.com

# SMTP Configuration (for development/testing)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid Configuration (for production)
SENDGRID_API_KEY=
# SendGrid Dynamic Template IDs (set these to your actual template IDs from SendGrid dashboard)
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=
SENDGRID_EMAIL_VERIFICATION_TEMPLATE_ID=

# AWS SES Configuration (alternative for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Application URLs
FRONTEND_URL=http://localhost:3000
# Base URL for the backend API (used for deep links)
APP_BASE_URL=https://your-domain.com
CORS_ORIGIN=http://localhost:3000
# Note: MOBILE_APP_SCHEME and MOBILE_RESET_PATH are deprecated in favor of universal links

# External Services
EMAIL_SERVICE_API_KEY=your-email-api-key
GEOLOCATION_API_KEY=your-geo-api-key

# SMS Configuration
# Options: twilio, onesignal (default: twilio)
SMS_PROVIDER=twilio

# Twilio Verify Service
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_VERIFY_SERVICE_SID=YOUR_VERIFY_SERVICE_SID

# Casino Integration params
CASINO_API_URL=https://api.example-casino.com
CASINO_API_BEARER_TOKEN=your-casino-api-bearer-token
CASINO_API_APP_ID=your-casino-app-id

# OneSignal Configuration
# Get these from your OneSignal dashboard (Settings > Keys & IDs)
ONE_SIGNAL_APP_ID=
ONE_SIGNAL_API_KEY=

# OneSignal Template IDs
# Set these to your actual template IDs from OneSignal dashboard
# Used when EMAIL_PROVIDER=onesignal or SMS_PROVIDER=onesignal
EMAIL_PASSWORD_RESET_TEMPLATE_ID=
EMAIL_VALIDATION_OTP_TEMPLATE_ID=
SMS_BONUS_SPINS_OTP_TEMPLATE_ID=
SMS_DAILY_LUCKY_WHEEL_REMINDER_TEMPLATE_ID=
SMS_RATING_TEMPLATE_ID=