<body>
  {{#if isAuthenticated}}
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin/dashboard">
        <i class="bi bi-controller"></i>
        Players Dashboard
      </a>
      <div class="navbar-nav ms-auto">
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i>
            {{admin.display_name}}
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  
  <div class="container-fluid">
    <div class="row">
      <nav class="sidebar" id="sidebar">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link {{#if isDashboard}}active{{/if}}" href="/admin/dashboard" data-bs-toggle="tooltip" data-bs-placement="right" title="Dashboard">
                <i class="bi bi-speedometer2"></i>
                <span class="nav-text">Dashboard</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if isUsers}}active{{/if}}" href="/admin/users" data-bs-toggle="tooltip" data-bs-placement="right" title="User Management">
                <i class="bi bi-people"></i>
                <span class="nav-text">User Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if isCasinos}}active{{/if}}" href="/admin/casinos" data-bs-toggle="tooltip" data-bs-placement="right" title="Casino Management">
                <i class="bi bi-building"></i>
                <span class="nav-text">Casino Management</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if isCasinoActions}}active{{/if}}" href="/admin/casino-actions" data-bs-toggle="tooltip" data-bs-placement="right" title="Casino Actions">
                <i class="bi bi-activity"></i>
                <span class="nav-text">Casino Actions</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if isVouchers}}active{{/if}}" href="/admin/vouchers" data-bs-toggle="tooltip" data-bs-placement="right" title="Vouchers">
                <i class="bi bi-gift"></i>
                <span class="nav-text">Vouchers</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if isVoucherRequests}}active{{/if}}" href="/admin/voucher-requests" data-bs-toggle="tooltip" data-bs-placement="right" title="Voucher Requests">
                <i class="bi bi-clipboard-check"></i>
                <span class="nav-text">Voucher Requests</span>
              </a>
            </li>
          </ul>
        </div>
        <div class="sidebar-toggle-wrapper">
          <button class="sidebar-toggle-btn" id="sidebarToggle" title="Toggle sidebar">
            <i class="bi bi-chevron-left"></i>
          </button>
        </div>
      </nav>
      
      <main class="px-md-4">
        <div class="pt-3">
          {{#if flashMessage}}
          <div class="alert alert-{{flashType}} alert-dismissible fade show" role="alert">
            {{flashMessage}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          {{/if}}
          
          {{{body}}}
        </div>
      </main>
    </div>
  </div>
  {{else}}
  <div class="login-container">
    {{{body}}}
  </div>
  {{/if}}
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/admin.js"></script>
</body>
</html>